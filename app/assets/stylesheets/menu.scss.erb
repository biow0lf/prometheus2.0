/* Menu styles */
#menu {
   position: absolute;
   width: 12em;
   height: auto;
   bottom: 0px;
   top: 120px;
   z-index:1;
   left: 0px;
   background: #eaeaea;

   ul {
      list-style: none;
      margin: 0px 0px 0px 0px;
      padding: 5px 5px 5px 5px;
   }

   li {
      list-style: none;
      margin: 1px 0px 0px 0px;
      padding: 2px 10px 2px 0px;
      text-align: center;
      font-size: 10pt;
      font-weight: bold;
      background: url(<%= asset_path "leftBorder.gif" %>) no-repeat top left #fafaff;
      border-left: solid #eaeaea 1px;
      border-right: solid #eaeaea 1px;
      border-top: solid #eaeaea 1px;
      border-bottom: solid #eaeaea 1px;
      letter-spacing: 0.2em;
      background-color: #fafaff;
      line-height: 125%;

      &:hover {
         background-color: #aabccd;
      }

      div {
         padding: 2px 10px 2px 0px;
         background: url(<%= asset_path "rightBottomBorder.gif" %>) no-repeat bottom right #fafaff;
      }
   }

   a {
      text-decoration: none;
      color: #202040;
   }
}
