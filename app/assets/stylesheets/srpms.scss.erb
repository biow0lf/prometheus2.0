.page-menu {
   line-height: 1.5;
   text-align: justify;
   display: flex;
   padding: 15px 0px 15px 0px;

   &::before {
      margin: 15px 0px 15px 0px;
   }

   &::after {
      margin-top: 15px;
   }

   .tab {
      a, span {
         background: url(<%= asset_path "ramka.gif" %>) no-repeat top left #eaeaea;
         border-bottom: solid #baccdd 2px;
         border-right: solid #baccdd 1px;
         padding: 0px 3px 0px 3px;
         line-height: 1.5;
         font-weight: bold;
      }

      a {
         border-right-color: #baccdd;
         font-size: 9pt;
         font-weight: bold;
         color: black;
         text-decoration: none;
      }

      span {
         border-right-color: gray;
         background-color: #baccdd;
         font-size: 10pt;
         color: white;
      }

      & ~ .tab {
         &::before {
            border-bottom: solid #baccdd 2px;
            background: transparent;
            content: " ";
            padding-left: 4px;
         }
      }
   }
}
