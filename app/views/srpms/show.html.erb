<% title _('Prometheus 2.0 - Package &laquo;%s&raquo;') % @srpm.name %>
<% description "#{@srpm.name} - #{@srpm.summary}" %>
<% keywords @srpm.summary %>

<div id='main-content'>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT Linux repositories') %>">
  <%= _('ALT Linux repositories') %>
</div>
<%= image_tag('collapse.gif', :id => 'topRPM', :class => 'close', :title => _('hide window'), :alt => _('hide window'), :size => '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">

<% @allsrpms.each do |rpm| %>
<tr>
  <td style="text-align: left;">
    <%= link_to "#{rpm.branch.name}:", srpm_path(rpm.branch, rpm), :class => 'news' %>
  </td>
  <td style="text-align: right;"><%= "#{rpm.version}-#{rpm.release}" %></td>
</tr>
<% end %>

</table>
</div><br/>

<% if @perl_watch %>
<div class="headleft">
  <div class="headright" title="<%= _('Other repositories') %>">
    <%= _('Other repositories') %>
  </div>
<%= image_tag('collapse.gif', :id => 'otherREPO', :class => 'close', :title => _('hide window'), :alt => _('hide window'), :size => '10x9') %>
</div>
<div id="otherREPODiv" style="border: dotted gray 1px;margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">
<tr>
  <td style="text-align: left;">
    <a class="news" href="http://search.cpan.org/CPAN/authors/id/<%= @perl_watch.path %>" rel='nofollow'><%= _('CPAN:') %></a>
  </td>
  <td style="text-align: right;"><%= @perl_watch.version %></td>
  </tr>
</table>
</div><br />
<% end %>

</div>

<div style="height:3em;">
  <div id="rpmtop">
    <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@srpm.group.full_name) %></b><br />
    <div class="header" style="letter-spacing:1px;"><%= _("Source RPM:") %> <%= @srpm.name %></div>
  </div>
</div>

<div>
<p class="break" />
<span class="current">&nbsp;<b><%= _('Main') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Changelog'), changelog_srpm_path(@srpm.branch, @srpm), :class => 'news', :title => _('full changelog') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Spec'), spec_srpm_path(@srpm.branch, @srpm), :class => 'news', :title => _('spec') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Patches'), srpm_patches_path(@srpm.branch, @srpm), :class => 'news', :title => _('patches') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Sources'), srpm_sources_path(@srpm.branch, @srpm), :class => 'news', :title => _('sources') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Download'), get_srpm_path(@srpm.branch, @srpm), :class => 'news', :title => _('download latest version') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_srpm_path(@srpm.branch, @srpm), :class => 'news', :title => _('this package in gear repositories') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_srpm_path(@srpm), :class => 'news', :title => _('list of bugs and feature requests') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_srpm_path(@srpm), :class => 'news', :title => _('repocop bugreports') %>&nbsp;</span><p class="news" />
<b><%= _('Current version:') %></b> <%= "#{@srpm.version}-#{@srpm.release}" %><br />
<b><%= _('Built:') %></b> <abbr title="<%= @srpm.buildtime %>" style="border-bottom: 1px dotted gray;
"><%= time_ago_in_words(@srpm.buildtime) %> <%= _('ago') %></abbr><br />
<% unless @ftbfs.empty? %>
  <b><%= _('<abbr title="Fails To Build From Source">FTBFS:</abbr>').html_safe %></b>
  <% if @ftbfs.count == 2 %>
    <% if @ftbfs.first.weeks == @ftbfs.last.weeks %>
      <%= @ftbfs.first.weeks %> weeks on <%= @ftbfs.first.arch %>, <%= @ftbfs.last.arch %><br/>
    <% else %>
      <%= @ftbfs.first.weeks %> weeks on <%= @ftbfs.first.arch %> and <%= @ftbfs.last.weeks %> weeks on <%= @ftbfs.last.arch %><br/>
    <% end %>
  <% else %>
    <%= @ftbfs.last.weeks %> weeks on <%= @ftbfs.last.arch %><br/>
  <% end %>
<% end %>
<b><%= _('Size:') %></b> <%= number_to_human_size(@srpm.size) %><br /><br />

<% if @srpm.url %>
<b><%= _('Home page:') %></b> &nbsp; <%= link_to @srpm.url, @srpm.url, :class => 'news', :rel => 'nofollow' %><br /><br />
<% end %>

<b><%= _('License:') %></b> <span class="news-text"><%= @srpm.license %></span><br />
<!-- TODO:
<b><%= _('Group:') %></b> <span class="news-text"><%= @srpm.group.full_name %></span><br />
-->

<b><%= _('Summary:') %></b> <span class="news-text"><%= @srpm.summary %></span><br />
<b><%= _('Description:') %></b> <div class="para"><%= simple_format h(@srpm.description) %></div>
<p class="news" />

<% if @leader %>
<div class="maintainer"><b><%= _('Current maintainer:') %></b>
<% if @leader.class.to_s == 'MaintainerTeam' %>
  <%= link_to @leader.name, team_path(@branch, @leader.login[1..-1]), :class => 'news', :title => _('information about maintainer') %>
<% else %>
  <%= link_to _(@leader.name), maintainer_path(@branch, @leader), :class => 'news', :title => _('information about maintainer') %>
<% end %>
</div><br/>
<% end %>

<% if @contributors %>
<b><%= _('List of contributors:').html_safe %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
    <% @contributors.each do |contributor| %>
      <li>
        <%= link_to _(contributor.name), maintainer_path(@branch, contributor), :class => 'news',
          :title => _('information about maintainer') %>
      </li>
    <% end %>
  </ul>
</div>
<% end %>

<% if @maintainers || @teams %>
<b><%= _('ACL:') %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
  <% @maintainers.each do |maintainer| %>
    <li><%= link_to _(maintainer.name), maintainer_path(@branch, maintainer), :class => 'news',
          :title => _('information about maintainer') %></li>
  <% end %>
  <% @teams.each do |team| %>
    <li><%= link_to team.name, team_path(@branch, team.login[1..-1]), :class => 'news' %></li>
  <% end %>
  </ul>
</div>
<% end %>

<% if @srpm.packages %>
<b><%= _('List of rpms provided by this srpm:') %></b>
<div class="para" style="margin-left: 0em;">
  <ul>
    <% @srpm.packages.map { |p| p.name }.sort.uniq.each do |name| %>
      <li><%= name %></li>
    <% end %>
  </ul>
</div>
<% end %>

</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
