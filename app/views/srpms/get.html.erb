<% title _('Prometheus 2.0 - Package &laquo;%s&raquo; - Download') % @spkg.name %>
<% description "#{ @spkg.name } - #{ @spkg.summary }" %>
<% keywords @spkg.summary %>

<div id='main-content'>
   <div class="rightbar fat">
      <%= render partial: "shared/tables/srpm_list", locals: { branched_srpms: @spkgs_by_name.as_json } %>
   </div>

<div style="height:3em;">
  <div id="rpmtop">
    <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@spkg.groupname) %></b><br>
    <div class="header" style="letter-spacing:1px;"><%= _('Source RPM:') %> <%= @spkg.name %></div>
  </div>
</div>

<div>
<%= render partial: "shared/srpms_menu", locals: { current_page: :download, branch: @branch, srpm: @spkg, opened_bugs: @opened_bugs, all_bugs: @all_bugs, version: @version } %>

&nbsp;<b><%= _('Choose a mirror:') %></b>
<select name="mirror" class="mirror-url" style="margin-left: 1em;">
<% @mirrors.each do |mirror| %>
  <%= "<option value=\"#{ mirror.uri }\">#{ mirror.name }</option>".html_safe %>
<% end %>
</select>
<p />

<table class="sources">
  <tr>
    <td class="package">
      <b>&middot;</b>
        <a href="<%= @spkg.href %>" class="news download"><%= @spkg.filename_in(@branch) %></a> (md5: <%= @spkg.md5 %>)
    </td>
    <td class="size">
      <b><%= number_to_human_size(@spkg.size) %></b>
    </td>
  </tr>

  <%= render partial: 'shared/arches', locals: { arches: @arched_packages_s.as_json }  %>

</table>
</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
