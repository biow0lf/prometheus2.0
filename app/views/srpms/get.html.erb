<% title _('Prometheus 2.0 - Package &laquo;%s&raquo; - Download') % @srpm.name %>
<% description "#{ @srpm.name } - #{ @srpm.summary }" %>
<% keywords @srpm.summary %>

<div id='main-content'>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT Linux repositories') %>">
  <%= _('ALT Linux repositories') %>
</div>
<%= image_tag('collapse.gif', id: 'topRPM', class: 'close', title: _('hide window'), alt: _('hide window'), size: '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size: 8pt;" width="100%">

<% @allsrpms.each do |srpm| %>
<tr>
  <td style="text-align: left;">
    <%= link_to "#{ @branch.name }:", get_srpm_path(@branch, srpm), class: 'news' %>
  </td>
  <td style="text-align: right;"><%= srpm.evr %></td>
</tr>
<% end %>

</table>
</div><br>
</div>

<div style="height:3em;">
  <div id="rpmtop">
    <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@srpm.groupname) %></b><br>
    <div class="header" style="letter-spacing:1px;"><%= _('Source RPM:') %> <%= @srpm.name %></div>
  </div>
</div>

<div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Main'), srpm_path(@branch, @srpm), class: 'news', title: _('information about SRPM') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Changelog'), changelog_srpm_path(@branch, @srpm), class: 'news', title: _('full changelog') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Spec'), spec_srpm_path(@branch, @srpm), class: 'news', title: _('spec') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Patches'), srpm_patches_path(@branch, @srpm), class: 'news', title: _('patches') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Sources'), srpm_sources_path(@branch, @srpm), class: 'news', title: _('sources') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Download') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_srpm_path(@branch, @srpm), class: 'news', title: _('this package in gear repositories') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR (%s/%s)') % [@opened_bugs.count, @all_bugs.count], bugs_srpm_path(@srpm), class: 'news', title: _('list of bugs and feature requests') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_srpm_path(@srpm), class: 'news', title: _('repocop bugreports') %>&nbsp;</span>

<p />

&nbsp;<b><%= _('Choose a mirror:') %></b>
<select name="mirror" class="mirror-url" style="margin-left: 1em;">
<% @mirrors.each do |mirror| %>
  <%= "<option value=\"#{ mirror.uri }\">#{ mirror.name }</option>".html_safe %>
<% end %>
</select>
<p />

<table>
  <tr>
    <td style="border-bottom: dotted 1px #aaa; padding-right: 1em;">
      <b>&middot;</b>
      <% if @branch.name == 'SisyphusARM' %>
        <a id="pack_0" href="http://ftp.altlinux.org/pub/distributions/ALTLinux<%= @branch.path %>/arm/SRPMS.all/<%= @srpm.filename_in(@branch) %>" class="news download"><%= @srpm.filename_in(@branch) %></a> (md5: <%= @srpm.md5 %>)
      <% else %>
        <a id="pack_0" href="http://ftp.altlinux.org/pub/distributions/ALTLinux<%= @branch.path %>/files/SRPMS/<%= @srpm.filename_in(@branch) %>" class="news download"><%= @srpm.filename_in(@branch) %></a> (md5: <%= @srpm.md5 %>)
      <% end %>
    </td>
    <td style="text-align: right;">
      <b><%= number_to_human_size(@srpm.size) %></b>
    </td>
  </tr>

  <%= render partial: 'shared/arches', locals: { arches: @packages.arched_packages }  %>

</table>
</div>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
