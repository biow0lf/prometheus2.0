<% title _("Prometheus 2.0 - Package ") + @srpm.name + _(" - Bugs") -%>
<% url "/srpm/" + @srpm.branch.name + '/' + @srpm.name + "/bugs" -%>

<div style="height:3em;">
    <div id="rpmtop">
        <b style="font-size:9pt;"><%= _("Group") %> :: <%= @srpm.group.name %></b><br />
        <div class="header" style="letter-spacing:1px;"><%= _("Source RPM:") %> <%= @srpm.name %></div>
    </div>
</div>

<div>
<p class="break" />
<span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>" class="news" title="<%= _("information about SRPM") %>"><%= _("Main") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>/changelog" class="news" title="<%= _("full changelog") %>"><%= _("Changelog") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>/spec" class="news" title="<%= _("spec") %>"><%= _("Spec") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>/get" class="news" title="<%= _("download latest version") %>"><%= _("Download") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>/gear" class="news" title="<%= _("this package in gear repositories") %>"><%= _("Gear") %></a>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _("Bugs and FR") %></b>&nbsp;</span><span class="vkladka">&nbsp;<a href="/<%= params[:locale] %>/srpm/<%= params[:branch] %>/<%= params[:name] %>/repocop" class="news" title="<%= _("repocop bugreports") %>"><%= _("Repocop") %></a>&nbsp;</span><p class="news" /><br />

<% if @allbugs.count == 0 -%>

<b><%= _("There is no bugreports for this ALT Bugzilla") %></b>

<% else %>

<b><%= _("Total:") %></b> <%= @allbugs.count %> (<span style='color:red'><%= @bugs.count %></span>|<%= @allbugs.count - @bugs.count %>)

<div style="text-align:left;margin-left:2em;margin-top:1.5em;">
<span class="tabsel">&nbsp;<%= _("open") %>&nbsp;</span>
<span class="tabunsel">&nbsp;<%= link_to _("total"), '/' + params[:locale] + '/srpm/' + params[:branch] + '/' + params[:name] + '/allbugs', :class => 'news' %>&nbsp;</span>
</div>

<table id="bugs" cellspacing="0" cellpadding="3" class="sortable">
  <tr>
    <th class="sort"><%= _("id") %></th>
    <th><%= _("severity") %></th>
    <th><%= _("status") %></th>
    <th><%= _("reporter") %></th>
    <th><%= _("summary") %></th>
  </tr>

  <% @bugs.each do |bug| -%>
  <tr>
    <td>
      <%= link_to bug.bug_id, 'https://bugzilla.altlinux.org/' + bug.bug_id.to_s, :class => 'news', :target => '_blank' %>
    </td>
    <td><%= bug.bug_severity %></td>
    <td><%= bug.bug_status %></td>
    <td><%= bug.reporter.gsub('@', ' at ') %></td>
    <td style="text-align:left">
      <%= bug.short_desc %>
    </td>
  </tr>
  <% end -%>

</table>

<% end -%>
