<% title _('Prometheus 2.0 - Package &laquo;%s&raquo; - Patches') % @srpm.name %>
<% description "#{@srpm.name} - #{@srpm.summary}" %>
<% keywords @srpm.summary %>

<div id='main-content'>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT Linux repositories') %>">
  <%= _('ALT Linux repositories') %>
</div>
<%= image_tag('collapse.gif', id: 'topRPM', class: 'close', title: _('hide window'), alt: _('hide window'), size: '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size: 8pt;" width="100%">

<% @allsrpms.each do |rpm| %>
<tr>
  <td style="text-align: left;">
    <%= link_to "#{rpm.branch.name}:", get_srpm_path(rpm.branch, rpm), class: 'news' %>
  </td>
  <td style="text-align: right;"><%= "#{rpm.version}-#{rpm.release}" %></td>
</tr>
<% end %>

</table>
</div><br>
</div>

<div style="height:3em;">
  <div id="rpmtop">
    <b style="font-size:9pt;"><%= _('Group') %> :: <%= _(@srpm.group.full_name) %></b><br>
    <div class="header" style="letter-spacing:1px;"><%= _('Source RPM:') %> <%= @srpm.name %></div>
  </div>
</div>

<div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Main'), srpm_path(@srpm.branch, @srpm), class: 'news', title: _('information about SRPM') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Changelog'), changelog_srpm_path(@srpm.branch, @srpm), class: 'news', title: _('full changelog') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Spec'), spec_srpm_path(@srpm.branch, @srpm), class: 'news', title: _('spec') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Patches') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Sources'), srpm_sources_path(@srpm.branch, @srpm), class: 'news', title: _('sources') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Download'), get_srpm_path(@srpm.branch, @srpm), class: 'news', title: _('download latest version') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_srpm_path(@srpm.branch, @srpm), class: 'news', title: _('this package in gear repositories') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_srpm_path(@srpm), class: 'news', title: _('list of bugs and feature requests') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_srpm_path(@srpm), class: 'news', title: _('repocop bugreports') %>&nbsp;</span></div>

<% if @srpm.patches.any? %>
<table style="pretty">
  <% @srpm.patches.each do |patch| %>
  <tr>
    <td style="border-bottom: #aaa dotted 1px; padding-right:1em;">&middot;
      <%= link_to patch.filename, download_srpm_patch_path(@branch, @srpm, patch), class: 'news' %>
    </td>
    <td> <b><%= number_to_human_size(patch.size) %></b> </td>
    <td>
      <% if patch.patch? %>
        <%= link_to _('Download'), download_srpm_patch_path(@branch, @srpm, patch), class: 'news' %>
      <% else %>
        &nbsp;
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
<% end %>

</div>

<div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
