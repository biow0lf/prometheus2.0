<% title _('Prometheus 2.0 - Maintainer &laquo;%s&raquo; - Packages') % _(@maintainer.name) %>

<div id='main-content'>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT Linux repositories') %>">
  <%= _('ALT Linux repositories') %>
</div>
<%= image_tag('collapse.gif', id: 'topRPM', class: 'close', title: _('hide window'), alt: _('hide window'), size: '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">

<% @branches.each do |branch| %>
<tr>
  <td style="text-align: left;">
    <%= link_to branch.name, maintainer_path(branch, @maintainer), class: 'news' %>
  </td>
  <td style="text-align: right;"><%= $redis.smembers("#{branch.name}:maintainers:#{@maintainer.login}").count %></td>
</tr>
<% end %>

</table>
</div>
</div>

<div class="header"><%= _('Maintainer:') %> <%= _(@maintainer.name) %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path(@branch, @maintainer), class: 'news', title: _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Packages') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_maintainer_path(@maintainer), class: 'news', title: _('gear') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR'), bugs_maintainer_path(@maintainer), class: 'news', title: _('Bugs/FR statistics assigned to this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('FTBFS'), ftbfs_maintainer_path(@maintainer), class: 'news', title: _('FTBFS') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), class: 'news', title: _('repocop bugreports') %>&nbsp;</span><p class="break" />
<b><%= _('List of packages which was built by this maintainer:') %></b> [<%= $redis.smembers("#{@branch.name}:maintainers:#{@maintainer.login}").count %>] <br><br>

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <% if @branch.name == 'Sisyphus' %>
      <th>
        <%= raw _('repo<br>cop') %><br>
        <%= link_to image_tag('stock_navigate-prev.png'), sort: 'status', order: sort_order_next('status') %>
      </th>
    <% end %>
    <th><%= _('package') %><br><%= link_to image_tag('stock_navigate-prev.png'), sort: 'name', order: sort_order_next('name') %></th>
    <th><%= raw _('current<br>version') %></th>
    <th><%= _('build time') %></th>
    <th><%= _('age') %><br><%= link_to image_tag('stock_navigate-prev.png'), sort: 'age', order: sort_order_next('age') %></th>
    <th><%= _('Url') %></th>
    <th><%= _('Summary') %></th>
  </tr>

  <% @srpms.each do |srpm| %>
  <tr>
    <% if @branch.name == 'Sisyphus' %>
      <td>
        <%= link_to image_tag("#{srpm.repocop}.png", size: '20x20', alt: srpm.repocop), repocop_srpm_path(id: srpm.name), class: 'repocoplink', title: 'repocop' %>
        <% if srpm.repocop_patch %>
          <br>
          <%= link_to image_tag('patch.jpg', alt: _('repocop patch')), srpm.repocop_patch.url, class: 'repocoplink', title: _('repocop patch for the package') %>
        <% end %>
      </td>
    <% end %>
    <td class="strange">
      <%= link_to srpm.name, srpm_path(id: srpm.name, branch: @branch.name), class: 'news' %>
    </td>
    <td><%= "#{srpm.version}-#{srpm.release}" %></td>
    <td><%= srpm.buildtime %></td>
    <td><%= time_ago_in_words(srpm.buildtime) %> <%= _('ago') %></td>
    <td><%= srpm.short_url %></td>
    <td style="text-align:left;"><%= srpm.summary %></td>
  </tr>
  <% end %>
</table>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
